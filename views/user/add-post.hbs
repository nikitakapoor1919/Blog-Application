
<div class="w3-container">

  <div class="w3-card-4" style="width:70%">
    <header class="w3-container w3-light-grey header">
      <br>
        <img class="img-responsive" src="" alt="">
        <i class="fa fa-user" aria-hidden="true"></i> &nbsp;{{username}}
        <h6 align="right"></h6>
    </header>
    <div class="w3-container content">
        <form  action="/user/add-post" method="post">
            <div class="form-group">
              <textarea name="text" placeholder="Write Something Here..." rows="4" cols="50" class="form-control" required>
              </textarea>
               <br>
            </div>
            <div class="form-group">
                <label for="image" >Add ImagePath</label>
                <br>
                <input type="text" id="photo" placeholder="Enter URL" name="photo" class="form-control">
            </div>
    
            <input type="hidden" name="_csrf"  value="{{csrfToken}}">
            <button id="btnAddPost"  type="submit" class="btn btn-primary">POST</button>
            <br>
        </form>  
        <br>
        <br>
    </div>
  </div>
  <br>

</div>

