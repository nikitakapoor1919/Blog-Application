
<div class="w3-container" style="margin-top: 70px;">

  <div class="w3-card-4" style="width:70%">
    <header class="w3-container w3-light-grey header">
      <br>
        <img class="img-responsive" src="" alt="">
        <i class="fa fa-user" aria-hidden="true"></i> &nbsp;<b>{{username}}</b>
        <h6 align="right"></h6>
    </header>
    <div class="w3-container content">
        <form  action="/user/add-post/?_csrf={{csrfToken}}" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <textarea name="text" placeholder="Write Something Here..." rows="4" cols="50" class="form-control">
              </textarea>
               <br>
            </div>
            <div class="form-group">
                <label for="image" >Add Image</label>
                <br>
                <input type="file" name="image"  class="form-control" required>
            </div>
           
    
            <input type="hidden" name="_csrf"  value="{{csrfToken}}">
            <button id="btnAddPost"  type="submit" class="btn btn-primary">POST</button>
            <br>
        </form>  
        <br>
        <br>
    </div>
  </div>
  <br>

</div>

