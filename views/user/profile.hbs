
    <div id="userBox" >
        <br>
        <div>
            <div id="edit">
                <i class="fa fa-edit"></i>
            </div>
            {{# if pic }}
            <img class="image" src=""  width="150" height="170">
            {{else}}
              <img class="image"   width="150" height="170" src="def.jpg">
            {{/if}}
            <h5 align="center"><b>{{username}} </b></h5>
           
        </div>
        <br>
        <nav class="navbar navbar-default" style="width:100%">
           <a class="navbar-brand" href="/user/profile">My Posts</a>
        </nav>
        <div id="post">
                    
            {{# each items}}

                <div class="w3-container">
                    {{# each this}}
                        <div class="w3-card-4" style="width:65%">
                            <header class="w3-container w3-light-grey header">
                                <img class="img-responsive" src="" alt="">
                                <i class="fa fa-user" aria-hidden="true"></i> &nbsp; {{this.postedBy}}
                                <h6 align="right">{{this.created}}</h6>
                            </header>
                            <div class="w3-container content">
                                <p>{{this.text}}</p><br>
                                <img class="img-responsive" src="{{ this.photo }}" alt="">
                            </div>
                            <footer class="w3-container w3-light-grey footer">
                                <span id="heart" ><i id="h" class="fa fa-heart-o" aria-hidden="true" ></i></span> {{this.likes.length}}
                                &nbsp;
                                &nbsp;
                                <button > <i class="fa fa-comment-o" aria-hidden="true"></i></button>
                                {{this.comments.length}}
                            </footer>
                        </div>
                        <br>
                {{/each}}
                </div>
            {{/each}}


        </div>
    </div>

